        <ComboBox x:Name="FloorComboBox" SelectedItem="{Binding floor}" HorizontalAlignment="Center" Height="22" Margin="312,144,165,0" VerticalAlignment="Top" Width="105"  />

        <TextBox x:Name="ExperienceextBox"   Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="NUMBERS ONLY!" HorizontalAlignment="Center" Height="22" Margin="248,185,229,0" TextWrapping="Wrap" Text="???" VerticalAlignment="Top" Width="105" />
        <TextBox x:Name="MaxKidstextBox"   Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="NUMBERS ONLY!" HorizontalAlignment="Center" Height="22" Margin="72,235,405,0" TextWrapping="Wrap" Text="???" VerticalAlignment="Top" Width="105" />
        <TextBox x:Name="MinAgetextBox"   Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="NUMBERS ONLY!" HorizontalAlignment="Center" Height="22" Margin="388,235,91,0" TextWrapping="Wrap" Text="???" VerticalAlignment="Top" Width="103" />
        <TextBox x:Name="MaxAgetextBox"   Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="NUMBERS ONLY!" HorizontalAlignment="Center" Height="22" Margin="108,283,368,0" TextWrapping="Wrap" Text="???" VerticalAlignment="Top" Width="106" />
        <CheckBox x:Name="SalaryPerHourCheckBox"    Content="" HorizontalAlignment="Center" Height="15" Margin="431,279,129,0" VerticalAlignment="Top" Width="22" />
        <TextBox x:Name="HourSalarytextBox"   Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="NUMBERS ONLY!" IsEnabled="{Binding ElementName= SalaryPerHourCheckBox, Path=IsChecked }" HorizontalAlignment="Center" Height="22" Margin="104,331,374,0" TextWrapping="Wrap" Text="???" VerticalAlignment="Top" Width="104" />
        <TextBox x:Name="MonthSalarytextBox"   Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="NUMBERS ONLY!"  HorizontalAlignment="Center" Height="22" Margin="348,335,129,0" TextWrapping="Wrap" Text="???" VerticalAlignment="Top" Width="105" />
        <CheckBox x:Name="HolidaysByGovCheckBox" Background="#FFCDCDCD" IsChecked="{Binding HolidaysByTheGOV, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Content="" HorizontalAlignment="Center" Height="15" Margin="275,501,285,0" VerticalAlignment="Top" Width="22" />
        <TextBox x:Name="RecommendationstextBox"   Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="NUMBERS ONLY!" HorizontalAlignment="Center" Height="22" Margin="109,536,371,0" TextWrapping="Wrap" Text="???" VerticalAlignment="Top" Width="102" />


