               Content="ID"
               HorizontalAlignment="Left"
               Margin="10,10,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="fNamelabel"
               Content="First Name"
               HorizontalAlignment="Left"
               Margin="165,10,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="lNamelabel"
               Content="Last Name"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="374,10,0,0" />
        <Label x:Name="BornYearlabel"
               Content="Born Year"
               HorizontalAlignment="Left"
               Margin="8,51,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="PhoneNumberlabel"
               Content="Phone Number"
               HorizontalAlignment="Left"
               Margin="253,51,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="Citylabel"
               Content="City"
               HorizontalAlignment="Left"
               Margin="10,95,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="Streetlabel"
               Content="Street"
               HorizontalAlignment="Left"
               Margin="200,95,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="Flatlabel"
               Content="Flat Number"
               HorizontalAlignment="Left"
               Margin="364,95,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="Liftlabel"
               Content="Does She Have A Lift?"
               HorizontalAlignment="Left"
               Margin="0,138,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="Floorlabel"
               Content="Floor"
               HorizontalAlignment="Left"
               Margin="253,140,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="Experiencelabel"
               Content=" enter a number of years of experience"
               HorizontalAlignment="Left"
               Margin="0,181,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="MaxKidslabel"
               Content="Max Kids"
               HorizontalAlignment="Left"
               Margin="10,231,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="MinAgelabel"
               Content="Kid's Min Age (in months)"
               HorizontalAlignment="Left"
               Margin="208,231,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="MaxAgelabel"
               Content="Kid's Max Age"
               HorizontalAlignment="Left"
               Margin="10,279,0,0"
               VerticalAlignment="Top" />
        <Label x:Name="SalaryPerHourlabel" Content="Does She Get Salary Per Hour?" HorizontalAlignment="Left" Margin="237,274,0,0" VerticalAlignment="Top" Width="184" />
        <Label x:Name="HourSalarylabel" Content="Hour's Salary" HorizontalAlignment="Left" Margin="10,327,0,0" VerticalAlignment="Top" Width="89" />
        <Label x:Name="MonthSalarylabel" Content="Month's Salary" HorizontalAlignment="Left" Margin="253,331,0,0" VerticalAlignment="Top" />
        <Label x:Name="HolidaysByGovlabel" Content="Does Her Holidays Based On The Gov's Holidays?" HorizontalAlignment="Left" Margin="-1,501,0,0" VerticalAlignment="Top" />
        <Label x:Name="Recommendationslabel" Content="Recommendations" HorizontalAlignment="Left" Margin="-1,532,0,0" VerticalAlignment="Top" />



        <Label x:Name="label_Copy3" Content="Days Of Working" HorizontalAlignment="Left" Margin="22,380,0,0" VerticalAlignment="Top" Width="113" Height="27" />
        <TextBox x:Name="start1" IsEnabled="{Binding ElementName=sunday , Path=IsChecked }"  Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="33,412,0,0" TextWrapping="Wrap" Text="Start" VerticalAlignment="Top" Width="85" />
        <TextBox x:Name="end1" IsEnabled="{Binding ElementName=sunday , Path=IsChecked }" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="33,437,0,0" TextWrapping="Wrap" Text="End" VerticalAlignment="Top" Width="85" />
        <TextBox x:Name="start2" IsEnabled="{Binding ElementName=monday , Path=IsChecked }" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="128,412,0,0" TextWrapping="Wrap" Text="Start" VerticalAlignment="Top" Width="85" />
        <TextBox x:Name="end2" IsEnabled="{Binding ElementName=monday , Path=IsChecked }" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="128,437,0,0" TextWrapping="Wrap" Text="End" VerticalAlignment="Top" Width="85" />
        <TextBox x:Name="start3" IsEnabled="{Binding ElementName=tuesday , Path=IsChecked }" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="218,412,0,0" TextWrapping="Wrap" Text="Start" VerticalAlignment="Top" Width="85" />
        <TextBox x:Name="end3" IsEnabled="{Binding ElementName=tuesday , Path=IsChecked }" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="218,437,0,0" TextWrapping="Wrap" Text="End" VerticalAlignment="Top" Width="85" />
        <TextBox x:Name="start4" IsEnabled="{Binding ElementName=wednesday , Path=IsChecked }" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="308,412,0,0" TextWrapping="Wrap" Text="Start" VerticalAlignment="Top" Width="85" />
        <TextBox x:Name="end4" IsEnabled="{Binding ElementName=wednesday , Path=IsChecked }" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="308,437,0,0" TextWrapping="Wrap" Text="End" VerticalAlignment="Top" Width="85" />
        <TextBox x:Name="start5" IsEnabled="{Binding ElementName=thursday , Path=IsChecked }" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="398,412,0,0" TextWrapping="Wrap" Text="Start" VerticalAlignment="Top" Width="85" />
        <TextBox x:Name="end5" IsEnabled="{Binding ElementName=thursday , Path=IsChecked }" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="398,437,0,0" TextWrapping="Wrap" Text="End" VerticalAlignment="Top" Width="85" />
        <TextBox x:Name="start6" IsEnabled="{Binding ElementName=friday , Path=IsChecked }" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="488,412,0,0" TextWrapping="Wrap" Text="Start" VerticalAlignment="Top" Width="85" />
        <TextBox x:Name="end6" IsEnabled="{Binding ElementName=friday , Path=IsChecked }" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="HH:MM" HorizontalAlignment="Left" Height="20" Margin="488,437,0,0" TextWrapping="Wrap" Text="End" VerticalAlignment="Top" Width="85" />
        <CheckBox x:Name="sunday" Content="CheckBox" Background="#FFCDCDCD" HorizontalAlignment="Left" Height="15" Margin="67,462,0,0" VerticalAlignment="Top" Width="17" />
        <CheckBox x:Name="monday" Content="CheckBox" Background="#FFCDCDCD" HorizontalAlignment="Left" Height="15" Margin="160,462,0,0" VerticalAlignment="Top" Width="17" />
        <CheckBox x:Name="tuesday" Content="CheckBox" Background="#FFCDCDCD" HorizontalAlignment="Left" Height="15" Margin="253,462,0,0" VerticalAlignment="Top" Width="17" />
        <CheckBox x:Name="wednesday" Content="CheckBox" Background="#FFCDCDCD" HorizontalAlignment="Left" Height="15" Margin="337,462,0,0" VerticalAlignment="Top" Width="16" />
        <CheckBox x:Name="thursday" Content="CheckBox" Background="#FFCDCDCD" HorizontalAlignment="Left" Height="15" Margin="423,462,0,0" VerticalAlignment="Top" Width="17" RenderTransformOrigin="0.5,0.5" />
        <CheckBox x:Name="friday" Content="CheckBox" Background="#FFCDCDCD" HorizontalAlignment="Left" Height="15" Margin="518,462,0,0" VerticalAlignment="Top" Width="16" RenderTransformOrigin="0.5,0.5" />
        <Button x:Name="NannyAdded" Style="{StaticResource ModernButt}" Content="Add The Nanny" HorizontalAlignment="Center" Margin="18,574,258,0" VerticalAlignment="Top" Width="306" Height="37" Click="NannyAdded_Click" />
        <Button x:Name="UpdateButton" Content="Update Nanny" HorizontalAlignment="Left" Height="31" Margin="374,580,0,0" VerticalAlignment="Top" Width="137" Click="UpdateButton_Click"/>
        <DatePicker x:Name="BornDatePicker"  SelectedDate="{Binding born, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true }"   HorizontalAlignment="Left" Height="26" Margin="84,52,0,0" VerticalAlignment="Top" Width="127"/>

    </Grid>
</controls:MetroWindow>
