                 Height="22" Margin="241,99,234,0"
                 TextWrapping="Wrap"
                 Text="???"
                 VerticalAlignment="Top"
                 Width="107" LostFocus="StreettextBox_LostFocus" />
        <TextBox x:Name="FlattextBox"
                  Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="NUMBERS ONLY!"
                 HorizontalAlignment="Center"
                 Height="22" Margin="463,99,19,0"
                 TextWrapping="Wrap"
                 Text="???"
                 VerticalAlignment="Top" Width="100" />
