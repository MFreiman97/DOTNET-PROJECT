<Window x:Class="WPF_UI.Contracts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="Contracts" Height="400" Width="500">
    <Grid>

        <ComboBox x:Name="ContractsComboBox" HorizontalAlignment="Left" Height="20" Margin="127,26,0,0" VerticalAlignment="Top" Width="188" DataContextChanged="ContractsComboBox_DataContextChanged"/>
        <Label x:Name="label" Content="select contract:" HorizontalAlignment="Left" Height="28" Margin="10,18,0,0" VerticalAlignment="Top" Width="89"/>
        <TextBox x:Name="InfoTextBox" HorizontalAlignment="Left" Height="73" Margin="32,81,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="400"/>
        <Label x:Name="label1" Content="information:" HorizontalAlignment="Left" Height="25" Margin="176,51,0,0" VerticalAlignment="Top" Width="76"/>
        <Button x:Name="UpdateContractButton" Content="UpdateContract" HorizontalAlignment="Left" Height="26" Margin="57,173,0,0" VerticalAlignment="Top" Width="162" Click="UpdateContractButton_Click"/>

    </Grid>
</Window>
